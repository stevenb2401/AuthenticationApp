@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Debug Claims";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-bug"></i> Debug Claims Information</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <strong>Claims Count:</strong> @ViewBag.ClaimsCount<br>
                <strong>User ID:</strong> @ViewBag.UserId<br>
                <strong>Email:</strong> @ViewBag.UserEmail
            </div>
            
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>Claim Type</th>
                            <th>Value</th>
                            <th>Value Type</th>
                            <th>Issuer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td><code class="small">@claim.Type</code></td>
                                <td>@claim.Value</td>
                                <td><span class="badge bg-secondary">@claim.ValueType</span></td>
                                <td class="small">@claim.Issuer</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Index", "Profile")" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Profile
            </a>
        </div>
    </div>
</div>