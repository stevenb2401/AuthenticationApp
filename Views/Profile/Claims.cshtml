@{
    ViewData["Title"] = "User Claims";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-list"></i> User Claims Information</h2>
        </div>
        <div class="card-body">
            <p class="text-muted">This page shows all claims provided by Azure Active Directory for your user account.</p>
            
            @if (ViewBag.Claims != null)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim Type</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in ViewBag.Claims)
                            {
                                <tr>
                                    <td><code>@claim.Type</code></td>
                                    <td>@claim.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> No claims information available.
                </div>
            }
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Details", "Profile")" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Profile
            </a>
        </div>
    </div>
</div>