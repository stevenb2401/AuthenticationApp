@model AuthenticationApp.Models.ManagerDashboardViewModel
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2><i class="fas fa-users-cog text-primary"></i> Manager Dashboard</h2>
            <p class="text-muted">Welcome, @Model.CurrentUser! Manage your team and access manager-level features.</p>
        </div>
    </div>

    <!-- Statistics  -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalUsers</h4>
                            <p class="mb-0">Total Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.ActiveUsers</h4>
                            <p class="mb-0">Active Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalRoles</h4>
                            <p class="mb-0">Available Roles</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-key fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@(Model.TotalUsers - Model.ActiveUsers)</h4>
                            <p class="mb-0">Inactive Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-times fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("TeamOverview", "Manager")" class="btn btn-outline-primary btn-block w-100">
                                <i class="fas fa-sitemap"></i> Team Overview
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Reports", "Manager")" class="btn btn-outline-info btn-block w-100">
                                <i class="fas fa-chart-bar"></i> View Reports
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("UserList", "User")" class="btn btn-outline-success btn-block w-100">
                                <i class="fas fa-list"></i> Manage Users
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Users -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5><i class="fas fa-user-plus"></i> Recent Users</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentUsers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.RecentUsers)
                                    {
                                        <tr>
                                            <td>@user.UserName</td>
                                            <td>@user.Email</td>
                                            <td>
                                                @if (user.EmailConfirmed)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Unverified</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("UserRoles", "Manager", new { id = user.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-cog"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent users found.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Role Distribution -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-chart-pie"></i> Role Distribution</h5>
                </div>
                <div class="card-body">
                    @if (Model.RoleDistribution.Any())
                    {
                        @foreach (var role in Model.RoleDistribution)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary">@role.Key</span>
                                <span class="fw-bold">@role.Value users</span>
                            </div>
                            <div class="progress mb-3" style="height: 8px;">
                                <div class="progress-bar" 
                                     style="width: @(Model.TotalUsers > 0 ? (role.Value * 100.0 / Model.TotalUsers) : 0)%">
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No role data available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>